# Azure サブスクリプション情報
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id

# Groq API (AI要約用) - https://console.groq.com/keys で取得
GROQ_API_KEY=your_groq_api_key_here

# Azure Cosmos DB 接続情報
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-primary-key
COSMOS_DB_DATABASE_NAME=NewsDatabase
COSMOS_DB_CONTAINER_NAME=Articles

# 記事保持期間設定（日数）
# 記事の発行日から起算して、この日数を過ぎた記事は自動削除される
ARTICLE_RETENTION_DAYS=30